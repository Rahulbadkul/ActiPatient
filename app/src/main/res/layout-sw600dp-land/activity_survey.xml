<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/app_background"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llThankYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:elevation="@dimen/button_elevation"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingBottom="@dimen/heading_padding_top_bottom"
                android:paddingLeft="@dimen/heading_padding_left_right"
                android:paddingRight="@dimen/heading_padding_left_right"
                android:paddingTop="@dimen/heading_padding_top_bottom"
                android:text="@string/activity_survey_text_thank_you"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_extra_large"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/tvQues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:elevation="@dimen/button_elevation"
                android:gravity="center"
                android:lines="3"
                android:paddingBottom="@dimen/question_padding_top_bottom"
                android:paddingLeft="@dimen/question_padding_left_right"
                android:paddingRight="@dimen/question_padding_left_right"
                android:paddingTop="@dimen/question_padding_top_bottom"
                android:text=""
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_extra_large"/>

            <LinearLayout
                android:id="@+id/llButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_margin"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/question_padding_left_right"
                android:paddingRight="@dimen/question_padding_left_right"
                android:visibility="visible"
                android:weightSum="2">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/activity_margin_extra_small"
                    android:layout_marginRight="@dimen/activity_margin_extra_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_green"
                    android:elevation="@dimen/button_elevation"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingBottom="@dimen/option_button_padding_top_bottom"
                    android:paddingLeft="@dimen/option_button_padding_left_right"
                    android:paddingRight="@dimen/option_button_padding_left_right"
                    android:paddingTop="@dimen/option_button_padding_top_bottom"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/activity_margin_extra_small"
                    android:layout_marginLeft="@dimen/activity_margin_extra_small"
                    android:layout_marginRight="@dimen/activity_margin_extra_small"
                    android:layout_marginStart="@dimen/activity_margin_extra_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:elevation="@dimen/button_elevation"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingBottom="@dimen/option_button_padding_top_bottom"
                    android:paddingLeft="@dimen/option_button_padding_left_right"
                    android:paddingRight="@dimen/option_button_padding_left_right"
                    android:paddingTop="@dimen/option_button_padding_top_bottom"
                    android:text=""
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/activity_margin_extra_small"
                    android:layout_marginLeft="@dimen/activity_margin_extra_small"
                    android:layout_marginRight="@dimen/activity_margin_extra_small"
                    android:layout_marginStart="@dimen/activity_margin_extra_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:elevation="@dimen/button_elevation"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingBottom="@dimen/option_button_padding_top_bottom"
                    android:paddingLeft="@dimen/option_button_padding_left_right"
                    android:paddingRight="@dimen/option_button_padding_left_right"
                    android:paddingTop="@dimen/option_button_padding_top_bottom"
                    android:text=""
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/activity_margin_extra_small"
                    android:layout_marginLeft="@dimen/activity_margin_extra_small"
                    android:layout_marginRight="@dimen/activity_margin_extra_small"
                    android:layout_marginStart="@dimen/activity_margin_extra_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:elevation="@dimen/button_elevation"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingBottom="@dimen/option_button_padding_top_bottom"
                    android:paddingLeft="@dimen/option_button_padding_left_right"
                    android:paddingRight="@dimen/option_button_padding_left_right"
                    android:paddingTop="@dimen/option_button_padding_top_bottom"
                    android:text=""
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/activity_margin_extra_small"
                    android:layout_marginStart="@dimen/activity_margin_extra_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:elevation="@dimen/button_elevation"
                    android:gravity="center"
                    android:lines="2"
                    android:paddingBottom="@dimen/option_button_padding_top_bottom"
                    android:paddingLeft="@dimen/option_button_padding_left_right"
                    android:paddingRight="@dimen/option_button_padding_left_right"
                    android:paddingTop="@dimen/option_button_padding_top_bottom"
                    android:text=""
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSmiley"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_margin"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/question_padding_left_right"
                android:paddingRight="@dimen/question_padding_left_right"
                android:visibility="gone"
                android:weightSum="5">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/smiley_button_height"
                    android:layout_marginEnd="@dimen/activity_margin_small"
                    android:layout_marginRight="@dimen/activity_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_green">
                    <ImageView
                        android:id="@+id/imExtremelyHappy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:elevation="@dimen/button_elevation"
                        android:src="@drawable/ic_very_happy"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/smiley_button_height"
                    android:layout_marginEnd="@dimen/activity_margin_small"
                    android:layout_marginRight="@dimen/activity_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_blue">
                    <ImageView
                        android:id="@+id/imHappy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:elevation="@dimen/button_elevation"
                        android:src="@drawable/ic_happy"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/smiley_button_height"
                    android:layout_weight="1"
                    android:background="@drawable/button_yellow"
                    android:elevation="@dimen/button_elevation">
                    <ImageView
                        android:id="@+id/imOk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:elevation="@dimen/button_elevation"
                        android:src="@drawable/ic_ok"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/smiley_button_height"
                    android:layout_marginLeft="@dimen/activity_margin_small"
                    android:layout_marginStart="@dimen/activity_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_pink">
                    <ImageView
                        android:id="@+id/imSad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:elevation="@dimen/button_elevation"
                        android:src="@drawable/ic_sad"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/smiley_button_height"
                    android:layout_marginLeft="@dimen/activity_margin_small"
                    android:layout_marginStart="@dimen/activity_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_red">
                    <ImageView
                        android:id="@+id/imExtremelySad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:elevation="@dimen/button_elevation"
                        android:src="@drawable/ic_very_sad"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/hospital_logo_width"
            android:layout_height="@dimen/hospital_logo_height"
            android:layout_margin="@dimen/activity_margin_small"
            android:animateLayoutChanges="true"
            android:background="@color/button_white">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/ivHospitalLogo"
                android:layout_width="@dimen/hospital_logo_width"
                android:layout_height="@dimen/hospital_logo_height"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"/>

        </RelativeLayout>
        <ImageView
            android:id="@+id/ivActiPatientLogo"
            android:layout_width="@dimen/actipatient_logo_width"
            android:layout_height="@dimen/actipatient_logo_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_margin_small"
            android:layout_marginEnd="@dimen/activity_margin_small"
            android:layout_marginRight="@dimen/activity_margin_small"
            android:contentDescription="@string/app_name"
            android:src="@drawable/actipatient_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivActiPatientLogo"
            android:layout_toLeftOf="@+id/ivActiPatientLogo"
            android:layout_toStartOf="@+id/ivActiPatientLogo"
            android:text="@string/activity_main_text_powered_by"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_small"
            android:textStyle="italic"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>