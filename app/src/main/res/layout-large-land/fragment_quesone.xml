<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/actipatient_new"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="#1c2b61"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tvQuesOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you think the check in/check out process was smooth?"
                android:textColor="@color/text_color_white"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:gravity="center"

                />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:weightSum="5"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/button_green"
            android:layout_weight="1">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_v_happy"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imExtremelyHappy" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_light_pink"
            android:layout_weight="1">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_v_hap"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imHappy" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_light_blue"
            android:layout_weight="1">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_v_ok"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imOk" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_light_yellow"
            android:layout_weight="1">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_v_sa"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imSad" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_red"
            android:layout_weight="1">


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_v_sad"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imExtremelySad" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
    </RelativeLayout>