<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/dialog_password_text_enter_access_pin"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_large"/>

        <EditText
            android:id="@+id/etAccessPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="6"
            android:gravity="center"
            android:hint="@string/dialog_password_hint_pin"
            android:inputType="text"
            android:maxLength="10"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_large"/>
        <EditText
            android:id="@+id/etAccessPINTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="4"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_large"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvForgotPIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:padding="@dimen/edittext_padding"
            android:text="@string/dialog_password_text_forgot_pin"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_small"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />
            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />
            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3">
            <TextView
                android:id="@+id/tv7"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />
            <TextView
                android:id="@+id/tv8"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />
            <TextView
                android:id="@+id/tv9"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvDummy"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
                android:visibility="invisible"
            />
            <TextView
                android:id="@+id/tv0"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />
            <TextView
                android:id="@+id/tvBack"
                android:layout_width="@dimen/pin_button_size"
                android:layout_height="@dimen/pin_button_size"
                android:layout_margin="@dimen/pin_button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:text="\u232B"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>