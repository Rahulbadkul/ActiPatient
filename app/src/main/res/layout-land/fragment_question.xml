<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/actipatient_new"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/purple"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tvQues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you think the check in/check out process was smooth?"
                android:textColor="@color/text_color_white"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:gravity="center"

                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="25dp"
            android:weightSum="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/llbutton"

            >
            <TextView
                android:id="@+id/tv1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@drawable/button_green"
                android:text="DEFINITELY"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@drawable/button_red"
                android:text="PROBABLY"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:textSize="15dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@drawable/button_red"
                android:text="PROBABLY"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:textSize="15dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@drawable/button_red"
                android:text="PROBABLY"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/text_color_black"
                android:textSize="15dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@drawable/button_red"
                android:text="NO"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:textSize="15dp"
                android:layout_weight="1"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:weightSum="5"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/llSmiley"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/button_green"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_v_happy"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imExtremelyHappy" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_light_blue"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_v_hap"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imHappy" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_light_yellow"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_v_ok"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imOk" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_light_pink"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_v_sa"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imSad" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_red"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_v_sad"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imExtremelySad" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imLogo" />


</RelativeLayout>