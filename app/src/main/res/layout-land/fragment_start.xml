<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/actipatient_new"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#1c2b61"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvThanku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:gravity="center"
                    android:text="@string/welcome"
                    android:textColor="@color/text_color_white"
                    android:textSize="20dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="77dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvStart"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_light_yellow"
                    android:gravity="center"
                    android:textColor="@color/text_color_black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rrLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvEnglish"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="90dp"
                android:layout_marginRight="108dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_green"
                android:gravity="center"
                android:padding="5dp"
                android:text="English"/>

            <TextView
                android:id="@+id/tvHindi"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvEnglish"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_white"
                android:gravity="center"
                android:padding="5dp"
                android:text="हिंदी"/>


            <!-- <TextView
                 android:text="IN_PATIENT"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="260dp"
                 android:background="@drawable/button_green"
                 android:padding="5dp"
                 android:layout_marginTop="10dp"
                 android:id="@+id/tvSurveyType" />-->

            <ImageView
                android:id="@+id/imLogo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>


            <ImageView
                android:id="@+id/imSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_settings"/>


            <TextView
                android:id="@+id/tvSurveyType"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imSettings"
                android:gravity="center"
                android:text="IP"
            />


        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>