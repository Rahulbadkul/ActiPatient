<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingBottom="@dimen/heading_padding_top_bottom"
                android:paddingLeft="@dimen/heading_padding_left_right"
                android:paddingRight="@dimen/heading_padding_left_right"
                android:paddingTop="@dimen/heading_padding_top_bottom"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_extra_large"/>

            <TextView
                android:id="@+id/tvStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/start_button_margin_left_right"
                android:layout_marginRight="@dimen/start_button_margin_left_right"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@drawable/button_yellow"
                android:elevation="@dimen/button_elevation"
                android:gravity="center"
                android:paddingBottom="@dimen/start_button_padding_top_bottom"
                android:paddingLeft="@dimen/start_button_padding_left_right"
                android:paddingRight="@dimen/start_button_padding_left_right"
                android:paddingTop="@dimen/start_button_padding_top_bottom"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_extra_large"
                android:textStyle="bold"
                android:visibility="visible"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/activity_margin_small"

            android:layout_marginEnd="@dimen/activity_margin_small"
            android:layout_marginRight="@dimen/activity_margin_small"
            android:visibility="visible">
            <TextView
                android:id="@+id/tvHindi"
                android:layout_width="@dimen/language_button_width"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvEnglish"
                android:background="@drawable/button_white"
                android:gravity="center"
                android:padding="@dimen/top_bottom_margin"
                android:text="@string/activity_main_text_language_hindi"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_medium"/>
            <TextView
                android:id="@+id/tvEnglish"
                android:layout_width="@dimen/language_button_width"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tvHindi"
                android:layout_toStartOf="@+id/tvHindi"
                android:background="@drawable/button_green"
                android:gravity="center"
                android:padding="@dimen/top_bottom_margin"
                android:text="@string/activity_main_text_language_english"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/text_size_medium"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/ivHospitalLogo"
            android:layout_width="@dimen/hospital_logo_width"
            android:layout_height="@dimen/hospital_logo_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/activity_margin_small"
            android:background="@color/button_white"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/activity_margin_small"
            android:src="@drawable/ic_setting"/>
        <TextView
            android:id="@+id/tvSurveyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_margin_small"
            android:background="@drawable/button_green"
            android:gravity="center"
            android:padding="@dimen/top_bottom_margin"
            android:text="IN-PATIENT"
            android:textColor="@color/app_text_color"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/ivActiPatientLogo"
            android:layout_width="@dimen/actipatient_logo_width"
            android:layout_height="@dimen/actipatient_logo_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_margin_small"
            android:layout_marginEnd="@dimen/activity_margin_small"
            android:layout_marginRight="@dimen/activity_margin_small"
            android:contentDescription="@string/app_name"
            android:src="@drawable/actipatient_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivActiPatientLogo"
            android:layout_toLeftOf="@+id/ivActiPatientLogo"
            android:layout_toStartOf="@+id/ivActiPatientLogo"
            android:text="@string/activity_main_text_powered_by"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_small"
            android:textStyle="italic"
        />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>